{
  "name": "langfuse-mcp-server",
  "version": "0.0.2-rc.0",
  "description": "A MCP Server for Langfuse Prompt Management",
  "main": "index.js",
  "type": "module",
  "bin": {
    "langfuse-mcp-server": "./build/index.js"
  },
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\""
  },
  "files": [
    "build"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.5.0",
    "langfuse": "^3.35.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "release-it": "^18.1.2",
    "typescript": "^5.7.3"
  },
  "repository": {
    "type": "git",
    "url": "hu"
  },
  "keywords": [
    "langfuse",
    "model-context-protocol",
    "prompt",
    "management"
  ],
  "author": "marcklingen",
  "license": "MIT",
  "release-it": {
    "hooks": {
      "before:release": "npm run build"
    },
    "git": {
      "commitMessage": "chore: release v${version}",
      "tagName": "v${version}",
      "commitArgs": [
        "--no-verify"
      ],
      "pushArgs": [
        "--no-verify"
      ]
    },
    "github": {
      "release": true,
      "web": true,
      "autoGenerate": true,
      "releaseName": "v${version}"
    }
  }
}
